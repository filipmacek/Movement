<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_cordinator_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/light_background"
            >


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="3dp"
                android:layout_margin="10dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/cardBackground"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_weight="1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginVertical="10dp"
                           android:text="RouteId"
                           android:textColor="@color/blackText"
                           android:textSize="18sp"
                           android:fontFamily="monospace"
                           android:paddingHorizontal="10dp"
                           tools:layout_editor_absoluteX="15dp"
                           tools:layout_editor_absoluteY="15dp"
                           tools:ignore="MissingConstraints" />


                       <TextView
                           android:id="@+id/routeIdInfo"
                           android:layout_weight="1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginVertical="10dp"
                           android:text="RouteId"
                           android:textColor="@color/blackText"
                           android:textSize="18sp"
                           android:fontFamily="monospace"
                           android:paddingHorizontal="10dp"
                           tools:layout_editor_absoluteX="15dp"
                           tools:layout_editor_absoluteY="15dp"
                           tools:ignore="MissingConstraints" />




                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Current location"
                           android:textColor="@color/blackText"
                           android:textSize="11sp"
                           android:layout_marginHorizontal="7sp"/>


                       <TextView
                           android:id="@+id/currentLocation"
                           android:textColor="@color/blackText"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginHorizontal="8sp"
                           android:text=""
                           tools:layout_editor_absoluteX="16dp"
                           tools:layout_editor_absoluteY="55dp"
                           tools:ignore="MissingConstraints" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginVertical="3dp"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Data points"
                           android:textColor="@color/blackText"
                           android:textSize="11sp"
                           android:layout_marginHorizontal="7sp"/>


                       <TextView
                           android:id="@+id/dataPoints"
                           android:textColor="@color/blackText"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginHorizontal="8sp"
                           android:text=""
                           tools:layout_editor_absoluteX="16dp"
                           tools:layout_editor_absoluteY="55dp"
                           tools:ignore="MissingConstraints" />
                   </LinearLayout>

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_marginVertical="8sp"
                      android:background="@android:color/darker_gray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="9sp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textColor="@color/blackText"
                        android:textSize="18sp"
                        android:fontFamily="monospace"
                        android:paddingHorizontal="10dp"
                        tools:layout_editor_absoluteX="15dp"
                        tools:layout_editor_absoluteY="15dp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start location"
                                android:textColor="@color/blackText"
                                android:textSize="12sp"
                                android:layout_marginHorizontal="7sp"/>
                            <ProgressBar
                                android:id="@+id/startDestinationProgress"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:visibility="visible"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End location"
                                android:textColor="@color/blackText"
                                android:textSize="12sp"
                                android:layout_marginHorizontal="7sp"/>
                            <ProgressBar
                                android:id="@+id/endDestinationProgress"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:visibility="visible"/>
                        </LinearLayout>

                    </LinearLayout>

               </LinearLayout>

<!--                   <com.google.android.material.button.MaterialButton-->
<!--                       android:id="@+id/clear_database"-->
<!--                       android:layout_width="100dp"-->
<!--                       android:layout_marginVertical="8dp"-->
<!--                       android:layout_height="50dp"-->
<!--                       android:text="Clear"-->
<!--                       android:textAlignment="center"-->
<!--                       app:layout_constraintTop_toBottomOf="@+id/latLong"-->
<!--                       tools:layout_editor_absoluteX="-6dp"-->
<!--                       tools:ignore="MissingConstraints" />-->






            </com.google.android.material.card.MaterialCardView>



            <fragment
                android:id="@+id/movement_map"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="20dp"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
