<layout>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    android:layout_margin="20dp"
    app:cardBackgroundColor="@color/cardBackground"
    app:strokeWidth="1dp"
    app:strokeColor="@color/white"
    style="@style/Widget.Movement.MaterialCardView"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nodeId"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="NodeId"
                    android:textColor="@color/blackText"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/nodeName"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="Node name"
                    android:textColor="@color/blackText"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/nodeIp"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Ip location"
                android:textColor="@color/blackText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/nodeStatus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/nodeStatusText"
                    android:layout_margin="10dp"
                    android:textColor="@color/blackText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect status"/>

            </LinearLayout>



        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>

</layout>