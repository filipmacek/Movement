<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2ECFC2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginPage" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
d    </style>

    <style name="TextAppearance.Movement.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Movement.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.Movement.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Theme.Movement.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>

    <style name="Widget.Movement.MaterialCardView" parent="Widget.MaterialComponents.CardView">

    </style>

    <style name="TextAppearance.Movement.Headline1" parent="TextAppearance.MaterialComponents.Headline1">

    </style>


</resources>